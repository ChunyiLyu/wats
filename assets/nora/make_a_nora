#!/usr/bin/env bash
set -ue

APPNAME=${1:-"nora"}
STACK=${2:-"windows2012R2"}

## Remove existing
cf d -f $APPNAME

## Push new
cf push -m 2g $APPNAME -s $STACK -b https://github.com/ryandotsmith/null-buildpack.git -p NoraPublished --no-start
if ! cf enable-diego $APPNAME; then
    echo "**************** Couldn't run cf enable-diego, trying to install plugin ****************"
    cf add-plugin-repo CF-Community http://plugins.cloudfoundry.org/ || \
        echo "**************** Can't add repo. Assuming repo exists ****************"
    cf install-plugin Diego-Beta -r CF-Community
    cf enable-diego $APPNAME
fi
cf start $APPNAME
